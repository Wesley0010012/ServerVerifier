# ======= DEFAULT ========
# Default interval (in milliseconds) between monitor executions
MONITOR_TIMEOUT_MS=1000


# ======= MONITORS =======
# Enable monitors (set to true to activate, anything else disables)
STORAGE_CHECK=true
FILE_SYSTEM_HEALTH=true
NETWORK_USAGE=true
SWAP_USAGE=true
BATTERY_STATUS=true
MEMORY_CHECK=true
SYSTEM_LOAD=true
CPU_CHECK=true

# ======= MONITOR LIMITS AND INTERVALS =======
# Percentage limits to trigger alerts (numbers between 0 and 100)
STORAGE_PERCENTAGE_LIMIT=80
FILESYSTEM_HEALTH_PERCENTAGEM_LIMIT=90
NETWORK_PERCENTAGEM_LIMIT=75
SWAP_PERCENTAGEM_LIMIT=85
BATTERY_PERCENTAGEM_LIMIT=20
MEMORY_PERCENTAGEM_LIMIT=80
LOAD_PERCENTAGEM_LIMIT=70
CPU_PERCENTAGE_LIMIT=85

# Notification intervals in seconds (e.g., 60 = 1 minute)
STORAGE_PERCENTAGE_NOTIFICATION_INTERVAL=60
FILESYSTEM_HEALTH_NOTIFICATION_INTERVAL=60
NETWORK_PERCENTAGE_NOTIFICATION_INTERVAL=60
SWAP_PERCENTAGE_NOTIFICATION_INTERVAL=60
BATTERY_PERCENTAGE_NOTIFICATION_INTERVAL=60
MEMORY_PERCENTAGE_NOTIFICATION_INTERVAL=60
LOAD_PERCENTAGE_NOTIFICATION_INTERVAL=60
CPU_PERCENTAGE_NOTIFICATION_INTERVAL=60

# ======= NOTIFIERS =======
# Enable notifier types (set to true to activate)
DISCORD_MESSAGE_NOTIFIER=true
CONSOLE_LOG_MESSAGE_NOTIFIER=true

# ======= NOTIFIER CONFIGURATION =======
# Discord webhook URL for sending messages
DISCORD_CONNECTION_URL=https://discord.com/api/v10/channels/YOUR_CHANNEL_ID/messages
# Discord bot token (secret string)
DISCORD_CONNECTION_TOKEN=your_token_here
